};
*/
 
const ll oo = 1e18;
const ll mod = 1e9 + 7;
const ll N = 2e5 + 123;
 
int x,y,z;
vector<vector<string>> grid;
vector<vector<vector<bool>>> vis;
vector<vector<int>> ans;
set<pair<int,int>> col;
 
int dfs(int i,int j,int k){
    if(i >= z || i < 0 || j >= x || j < 0 || k >= y || k < 0)return 0;
    if(vis[i][j][k])return 0;
    vis[i][j][k] = 1;
    if(grid[i][j][k] == '#')return 0;
    
    col.insert({j,k});
    int sum = 1;
    sum += dfs(i+1,j,k);
    sum += dfs(i-1,j,k);
    sum += dfs(i,j+1,k);
    sum += dfs(i,j-1,k);
    sum += dfs(i,j,k+1);
    sum += dfs(i,j,k-1);
    //cout << i << " " << j << " " << k << " "<< sum << endl;
    return sum;
}
void Goriber_solve()
{
    cin >> x >> y >> z;
    grid.clear();vis.clear();ans.clear();
    grid.resize(z,vector<string>(x));
    vis.resize(z, vector<vector<bool>>(x, vector<bool>(y, false)));
    ans.resize(x,vector<int>(y,0));
    for(int i = 0; i < z; i++){
        for(int j = 0; j < x; j++){
            cin >> grid[i][j];
        }
    }
    for(int i = 0; i < z; i++){
        for(int j = 0; j < x; j++){
            for(int k = 0; k < y; k++){
                if(grid[i][j][k] == '.' && vis[i][j][k] == 0){
                    int sum = dfs(i,j,k);
                    //cout << sum << endl;
                    for(auto u : col){
                        ans[u.F][u.S] += sum;
                    }
                    col.clear();
                }
            }
        }
    }
    int mx = 0;
    for(int i = 0; i < x; i++){
        for(int j = 0; j < y; j++){
            mx = max(mx,ans[i][j]);
        }
    }
    cout << mx << endl;
}
 
signed main()
{
    Fokinnir_moto_kaj_koris_na
    int _ = 1,tc = 0;
    cin >> _;
    while (_--)
    {
        //cout<<"Case "<<++tc<<": ";
        Goriber_solve();
    }
    return 0;
}
