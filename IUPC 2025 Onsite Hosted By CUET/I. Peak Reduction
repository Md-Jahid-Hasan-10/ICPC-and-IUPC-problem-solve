const ll oo = 1e18;
const ll mod = 1e9 + 7;
const ll N = 2e5 + 123;

void Goriber_solve()
{
    int n;
    cin >> n;
    vi ar(n);
    for(auto &i : ar)cin >> i;
    if(ar[0] == 1 && ar[n-1] == 2){
        py;
    }
    else if(ar[0] == 2 && ar[n-1] == 1){
        py;
    }
    else pn;
}

signed main()
